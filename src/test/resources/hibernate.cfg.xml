<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
<!--<property name="hibernate.hbm2ddl.auto">create</property>-->
    <mapping class="by.frost.hibernate.starter.entity.User"/>
    <mapping class="by.frost.hibernate.starter.entity.Company"/>
    <mapping class="by.frost.hibernate.starter.entity.Profile"/>
    <mapping class="by.frost.hibernate.starter.entity.Chat"/>
    <mapping class="by.frost.hibernate.starter.entity.UserChat"/>
    <mapping class="by.frost.hibernate.starter.entity.Student"/>
    <mapping class="by.frost.hibernate.starter.entity.Course"/>
    <mapping class="by.frost.hibernate.starter.entity.StudentProfile"/>
    <mapping class="by.frost.hibernate.starter.entity.Teacher"/>
    <mapping class="by.frost.hibernate.starter.entity.TeacherCourse"/>
  </session-factory>
</hibernate-configuration>